{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "realesrgan",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "dialog": {
        "open": true
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.share121.realesrgan",
      "targets": "all",
      "windows": {
        "nsis": {
          "languages": ["SimpChinese"],
          "displayLanguageSelector": true
        },
        "wix": {
          "language": "zh-CN"
        }
      },
      "externalBin": ["binaries/realesrgan-n"],
      "resources": ["resources/*"]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "图像超分",
        "decorations": false,
        "width": 470,
        "height": 760,
        "visible": false,
        "center": true,
        "minWidth": 225,
        "minHeight": 40
      }
    ]
  }
}
